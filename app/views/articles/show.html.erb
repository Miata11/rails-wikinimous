<div class="container mt-5">
  <h1><%= @article.title %></h1>
  <p class="text-muted"><%= @article.content %></p>

  <div class="d-flex gap-2 mt-3">
    <%= link_to 'Modifier', edit_article_path(@article), class: "btn btn-warning" %>
    <%= link_to 'Supprimer', article_path(@article), method: :delete, data: { confirm: 'Êtes-vous sûr ?' }, class: "btn btn-danger" %>
    <%= link_to 'Retour à la liste', articles_path, class: "btn btn-secondary" %>
  </div>
</div>
